<%= form_with(model: [@lesson, @section]) do |form| %>
  <% if section.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= render "range", section: @section, lesson: @lesson, form: form %>
  </div>

  <div class="section-form-row">
    <div class="section-form-name">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, minlength: 5, maxlength: 25, placeholder: "Name" %>
    </div>
  </div>

  <div class="section-form-row">
    <div class="section-form-playback">
      <%= form.label :playback_speed, style: "display: block" %>
      <%= form.text_field :playback_speed, min: 0.5, max: 2, type: :number, step: 0.5 %>
    </div>

    <div class="section-form-loop">
      <%= form.label :loop %>
      <label class="switch">
        <%= form.check_box :loop %>
        <span class="slider round"></span>
      </label>
    </div>
  </div>

  <div class="section-action-buttons">
    <%= form.submit %>
    <%= link_to "Cancel", lesson_path(@lesson) %>
  </div>
<% end %>
