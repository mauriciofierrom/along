<div class="lesson-grid" data-controller="lesson" data-lesson-player-outlet=".video-player">
  <%# <p style="color: green"><%= notice %1></p> %>

  <div class="header">
    <%# <%= render @lesson %1> %>
    <%= @lesson.name %>
    <div>
      <%= link_to "Edit this lesson", edit_lesson_path(@lesson) %> |
      <%= link_to "Back to lessons", lessons_path %>

      <%= button_to "Destroy this lesson", @lesson, method: :delete %>
    </div>
  </div>

  <div class="video-player player"
       data-controller="player"
       data-video-id="<%= video_id(@lesson) %>">
       <div id="player"></div>
  </div>

  <div class="sections">
    <%= link_to "New section", new_lesson_section_path(@lesson) %>
    <div class="sections-selector">
      <% @lesson.sections.each do |section| %>
        <%= render "sections/section_item", lesson: @lesson, section: section %>
      <% end %>
    </div>
  </div>
</div>
