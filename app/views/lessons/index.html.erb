<p style="color: green"><%= notice %></p>

<h1>Lessons</h1>

<%= turbo_frame_tag Lesson.new %>

<%= turbo_frame_tag "lessons", class: "lesson-list" do %>
  <% @lessons.each do |lesson| %>
    <%= render lesson %>
  <% end %>
<% end %>

<%= link_to "New lesson",
  new_lesson_path,
  data: { turbo_frame: dom_id(Lesson.new) }
%>
