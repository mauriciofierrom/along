<div class="lessons">
  <div class="header">
    <div class="title">
      <h1><%= Lesson.model_name.human(count: 2) %></h1>
    </div>

    <div class="new">
      <%= link_to "#{t("actions.new")} #{Lesson.model_name.human}",
        new_lesson_path,
        data: { turbo_frame: dom_id(Lesson.new) }
      %>
    </div>
  </div>

  <%= turbo_frame_tag Lesson.new %>

  <%= turbo_frame_tag "lessons", class: "list" do %>
    <%= render partial: "lesson", collection: @lessons, cached: true %>
  <% end %>

  <%= paginate @lessons %>
</div>

